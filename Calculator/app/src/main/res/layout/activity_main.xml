<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/calculation"
        android:layout_width="390dp"
        android:layout_height="83dp"
        android:paddingRight="7sp"
        android:textAlignment="textEnd"
        android:textColor=" #532A93"
        android:textSize="60sp"
        android:textStyle="bold"
        android:layout_marginTop="5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/result"
        android:layout_width="390dp"
        android:layout_height="83dp"
        android:paddingRight="7sp"
        android:textAlignment="textEnd"
        android:textColor=" #532A93"
        android:textSize="60sp"
        android:textStyle="bold"
        android:layout_marginTop="5sp"
        app:layout_constraintEnd_toEndOf="@+id/calculation"
        app:layout_constraintStart_toStartOf="@+id/calculation"
        app:layout_constraintTop_toBottomOf="@+id/calculation" />

    <Button
        android:id="@+id/clear"
        android:layout_width="188dp"
        android:layout_height="70sp"
        android:paddingTop="10sp"
        android:text="CLEAR"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:layout_marginStart="5sp"
        android:textStyle="bold"
        android:layout_marginTop="10sp"
        app:layout_constraintStart_toStartOf="@+id/result"
        app:layout_constraintTop_toBottomOf="@+id/result"/>

    <Button
        android:id="@+id/backspace"
        android:layout_width="188dp"
        android:layout_height="70sp"
        android:paddingTop="10sp"
        android:text="BACKSPACE"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginEnd="5sp"
        app:layout_constraintEnd_toEndOf="@+id/result"
        app:layout_constraintTop_toTopOf="@+id/clear"/>

    <Button
        android:id="@+id/btn_7"
        android:layout_width="90dp"
        android:layout_height="107dp"
        android:text="7"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/clear"
        app:layout_constraintTop_toBottomOf="@+id/clear" />

    <Button
        android:id="@+id/btn_8"
        android:layout_width="90dp"
        android:layout_height="107dp"
        android:text="8"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btn_7"
        app:layout_constraintEnd_toEndOf="@+id/clear"
        app:layout_constraintTop_toTopOf="@+id/btn_7" />

    <Button
        android:id="@+id/btn_9"
        android:layout_width="90dp"
        android:layout_height="107dp"
        android:text="9"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btn_8"
        app:layout_constraintStart_toStartOf="@+id/backspace"
        app:layout_constraintTop_toTopOf="@+id/btn_8" />

    <Button
        android:id="@+id/btn_dev"
        android:layout_width="90dp"
        android:layout_height="107dp"
        android:text="/"
        android:textColor="#E2D241"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btn_9"
        app:layout_constraintEnd_toEndOf="@+id/backspace"
        app:layout_constraintTop_toTopOf="@+id/btn_9" />

    <Button
        android:id="@+id/btn_4"
        android:layout_width="90dp"
        android:layout_height="107dp"
        android:text="4"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/btn_7"
        app:layout_constraintTop_toBottomOf="@+id/btn_7" />

    <Button
        android:id="@+id/btn_5"
        android:layout_width="90dp"
        android:layout_height="107dp"
        android:text="5"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btn_4"
        app:layout_constraintEnd_toEndOf="@+id/btn_8"
        app:layout_constraintTop_toTopOf="@+id/btn_4" />

    <Button
        android:id="@+id/btn_6"
        android:layout_width="90dp"
        android:layout_height="107dp"
        android:text="6"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btn_5"
        app:layout_constraintStart_toStartOf="@+id/btn_9"
        app:layout_constraintTop_toTopOf="@+id/btn_5" />

    <Button
        android:id="@+id/btn_mul"
        android:layout_width="90dp"
        android:layout_height="107dp"
        android:text="*"
        android:textColor="#E2D241"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btn_6"
        app:layout_constraintEnd_toEndOf="@+id/btn_dev"
        app:layout_constraintTop_toTopOf="@+id/btn_6" />

    <Button
        android:id="@+id/btn_1"
        android:layout_width="90dp"
        android:layout_height="107dp"
        android:text="1"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/btn_4"
        app:layout_constraintTop_toBottomOf="@+id/btn_4" />

    <Button
        android:id="@+id/btn_2"
        android:layout_width="90dp"
        android:layout_height="107dp"
        android:text="2"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btn_1"
        app:layout_constraintEnd_toEndOf="@+id/btn_5"
        app:layout_constraintTop_toTopOf="@+id/btn_1" />

    <Button
        android:id="@+id/btn_3"
        android:layout_width="90dp"
        android:layout_height="107dp"
        android:text="3"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btn_2"
        app:layout_constraintStart_toStartOf="@+id/btn_6"
        app:layout_constraintTop_toTopOf="@+id/btn_2" />

    <Button
        android:id="@+id/btn_sub"
        android:layout_width="90dp"
        android:layout_height="107dp"
        android:text="-"
        android:textColor="#E2D241"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btn_3"
        app:layout_constraintEnd_toEndOf="@+id/btn_mul"
        app:layout_constraintTop_toTopOf="@+id/btn_3" />

    <Button
        android:id="@+id/btn_dot"
        android:layout_width="90dp"
        android:layout_height="107dp"
        android:text="."
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/btn_1"
        app:layout_constraintTop_toBottomOf="@+id/btn_1" />

    <Button
        android:id="@+id/btn_0"
        android:layout_width="90dp"
        android:layout_height="107dp"
        android:text="0"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btn_dot"
        app:layout_constraintEnd_toEndOf="@+id/btn_2"
        app:layout_constraintTop_toTopOf="@+id/btn_dot" />

    <Button
        android:id="@+id/btn_equal"
        android:layout_width="90dp"
        android:layout_height="107dp"
        android:text="="
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#DA2CA2"
        app:layout_constraintBottom_toBottomOf="@+id/btn_0"
        app:layout_constraintStart_toStartOf="@+id/btn_3"
        app:layout_constraintTop_toTopOf="@+id/btn_0" />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="90dp"
        android:layout_height="107dp"
        android:text="+"
        android:textColor="#E2D241"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btn_equal"
        app:layout_constraintEnd_toEndOf="@+id/btn_sub"
        app:layout_constraintTop_toTopOf="@+id/btn_equal" />

</androidx.constraintlayout.widget.ConstraintLayout>
