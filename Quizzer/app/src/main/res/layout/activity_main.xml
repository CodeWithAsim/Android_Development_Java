<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:id="@+id/r1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/CQ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="15dp"
                android:text="Question * "
                android:textColor="@color/temprary"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/TQ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="15dp"
                android:text="/ *"
                android:textColor="#70FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="15dp"
            android:text="00:00:00"
            android:textSize="20dp"
            android:layout_marginEnd="5dp"
            android:textColor="#70FFFFFF"
            android:id="@+id/timer"></TextView>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toStartOf="@+id/timer"
            android:src="@drawable/ic_baseline_access_time_24"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="8dp"></ImageView>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/r1"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:background="#70FFFFFF"
        android:id="@+id/l"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Q"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textColor="@color/temprary"
            android:textSize="20dp"></TextView>

        <RelativeLayout
            android:id="@+id/RO1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/option_bg">

            <TextView
                android:id="@+id/OTV1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@+id/C1"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="Option 1 "
                android:textColor="@color/temprary"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>

            <ImageView
                android:id="@+id/C1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/choose_bg"></ImageView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RO2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/option_bg">

            <TextView
                android:id="@+id/OTV2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@+id/C2"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="Option 2 "
                android:textColor="@color/temprary"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>

            <ImageView
                android:id="@+id/C2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/choose_bg"></ImageView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RO3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/option_bg">

            <TextView
                android:id="@+id/OTV3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@+id/C3"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="Option 3 "
                android:textColor="@color/temprary"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>

            <ImageView
                android:id="@+id/C3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/choose_bg"></ImageView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RO4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/option_bg">

            <TextView
                android:id="@+id/OTV4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@+id/C4"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="Option 4 "
                android:textColor="@color/temprary"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>

            <ImageView
                android:id="@+id/C4"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/choose_bg"></ImageView>

        </RelativeLayout>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Next Question"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:textColor="@color/temprary"
        android:padding="15dp"
        android:id="@+id/next_q"></androidx.appcompat.widget.AppCompatButton>

</RelativeLayout>